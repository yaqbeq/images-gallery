{
  /* COMMON */

  /* FRONTEND - react */
  "editor.tabSize": 2,

  "eslint.validate": [
    "html",
    "css",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  /* API - python */
  "python.defaultInterpreterPath": "api/.venv/bin/python",
  "python.terminal.activateEnvironment": true,
  "python.terminal.executeInFileDir": false,
  "python.analysis.extraPaths": [
    "${workspaceFolder}/api/src",
    "${workspaceFolder}/api"
  ],
  "terminal.integrated.cwd": "${workspaceFolder}/api/src",
  "python.envFile": "${workspaceFolder}/api/.env",
  "python.autoComplete.extraPaths": [
    "${workspaceFolder}/api/src",
    "${workspaceFolder}/api"
  ],

  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.tabSize": 4
  },

  /* Ruff Python Linter and Formatter Settings */
  /* Disable Flake8 */
  "python.linting.flake8Enabled": false,

  /* Enable Ruff */
  "python.linting.ruffEnabled": true,
  "python.linting.enabled": true,
  "python.linting.ruffPath": "api/.venv/bin/ruff"
}
